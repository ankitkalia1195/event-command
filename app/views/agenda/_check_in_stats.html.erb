<div id="check-in-stats" class="bg-gray-800 rounded-lg p-4 mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h3 class="text-lg font-semibold text-white mb-1">Live Check-in Status</h3>
      <p class="text-sm text-gray-400">
        <span class="text-omise-teal font-medium"><%= checked_in_count %></span> of 
        <span class="text-white font-medium"><%= total_attendees %></span> attendees checked in
      </p>
    </div>
    <div class="text-right">
      <div class="text-2xl font-bold text-omise-teal"><%= checked_in_count %></div>
      <div class="text-xs text-gray-400">Checked In</div>
    </div>
  </div>
  
  <!-- Progress bar -->
  <div class="mt-3">
    <div class="w-full bg-gray-700 rounded-full h-2">
      <div class="bg-omise-teal h-2 rounded-full transition-all duration-500" 
           style="width: <%= total_attendees > 0 ? (checked_in_count.to_f / total_attendees * 100) : 0 %>%"></div>
    </div>
    <div class="text-xs text-gray-400 mt-1">
      <%= total_attendees > 0 ? (checked_in_count.to_f / total_attendees * 100).round(1) : 0 %>% complete
    </div>
  </div>
</div>
