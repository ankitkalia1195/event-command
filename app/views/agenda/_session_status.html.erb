<div id="session-status" class="bg-gray-800 rounded-lg p-4 mb-6">
  <div class="flex items-center justify-between">
    <div>
      <h3 class="text-lg font-semibold text-white mb-1">Current Session Status</h3>
      <p class="text-sm text-gray-400">
        <% current_session = @current_session %>
        <% if current_session %>
          <span class="text-omise-teal font-medium">"<%= current_session.title %>"</span> is currently in progress
        <% else %>
          <span class="text-gray-400">No session currently in progress</span>
        <% end %>
      </p>
    </div>
    <div class="text-right">
      <div class="text-2xl font-bold text-omise-teal">
        <% if current_session %>
          LIVE
        <% else %>
          --
        <% end %>
      </div>
      <div class="text-xs text-gray-400">Status</div>
    </div>
  </div>
  
  <!-- Session progress bar -->
  <% if current_session %>
    <div class="mt-3">
      <div class="w-full bg-gray-700 rounded-full h-2">
        <div class="bg-omise-teal h-2 rounded-full transition-all duration-1000 animate-pulse" 
             style="width: <%= current_session.progress_percentage %>%"></div>
      </div>
      <div class="text-xs text-gray-400 mt-1">
        <%= current_session.progress_percentage %>% complete
      </div>
    </div>
  <% end %>
</div>
