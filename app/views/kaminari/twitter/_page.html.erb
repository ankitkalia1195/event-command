<% if page.current? -%>
  <span class="px-3 py-2 text-sm font-medium text-white bg-omise-teal rounded-lg">
    <%= page %>
  </span>
<% else -%>
  <%= link_to page, url, 
        class: "px-3 py-2 text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-700 rounded-lg transition-colors",
        remote: remote %>
<% end -%>
