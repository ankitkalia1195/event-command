<div class="min-h-screen flex items-center justify-center bg-black py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <%= image_tag "omise-logo.png", alt: "Omise", class: "mx-auto h-16 w-auto" %>
      <h2 class="mt-6 text-3xl font-bold text-white">
        Command O Conference
      </h2>
      <p class="mt-2 text-sm text-gray-400">
        Developer Conference Login
      </p>
    </div>
    
    <div class="bg-gray-900 rounded-lg shadow-xl p-8">
      <!-- Flash Messages -->
      <% if notice %>
        <div class="mb-4 p-3 bg-green-600 text-white rounded-lg text-sm">
          <%= notice %>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="mb-4 p-3 bg-red-600 text-white rounded-lg text-sm">
          <%= alert %>
        </div>
      <% end %>

      <%= form_with url: login_path, method: :post, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email, "Company Email", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.email_field :email, 
                placeholder: "your.name@company.com",
                required: true,
                autocomplete: "email",
                class: "appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-600 placeholder-gray-400 text-white bg-gray-800 focus:outline-none focus:ring-2 focus:ring-omise-teal focus:border-transparent focus:z-10 sm:text-sm" %>
        </div>

        <div>
          <%= form.submit "Send Login Link", 
                class: "w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-omise-teal hover:bg-omise-teal-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-omise-teal transition-colors duration-200 cursor-pointer" %>
        </div>
      <% end %>
      
      <div class="mt-6 text-center">
        <p class="text-xs text-gray-400">
          A secure login link will be sent to your company email address.
        </p>
      </div>
    </div>
    
    <div class="text-center">
      <p class="text-sm text-gray-500">
        Command O Developer Conference
      </p>
    </div>
  </div>
</div>
