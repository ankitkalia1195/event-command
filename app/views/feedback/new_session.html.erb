<div class="min-h-screen bg-black text-white">
  <div class="max-w-2xl mx-auto px-4 py-8">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to session_path(@session), class: "inline-flex items-center text-omise-teal hover:text-omise-teal-dark transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Session
      <% end %>
    </div>

    <!-- Flash Messages -->
    <%= render partial: "shared/flash_messages" %>

    <!-- Session Info -->
    <div class="bg-gray-900 rounded-lg p-6 mb-8">
      <h1 class="text-2xl font-bold text-white mb-2">Session Feedback</h1>
      <p class="text-gray-400 mb-4">Share your thoughts about this session</p>
      <div class="border-l-4 border-omise-teal pl-4">
        <h2 class="text-lg font-semibold text-white"><%= @session.title %></h2>
        <p class="text-gray-400 text-sm">Speaker: <%= @session.speaker.name %></p>
      </div>
    </div>

    <!-- Feedback Form -->
    <div class="bg-gray-900 rounded-lg p-6">
      <%= form_with model: @feedback, url: create_session_feedback_path(@session), class: "space-y-6", data: { controller: "rating" } do |form| %>
        <!-- Rating Section -->
        <div>
          <label id="session-rating-label" class="block text-lg font-medium text-white mb-4">How would you rate this session?</label>
          <div class="flex space-x-2" role="radiogroup" aria-labelledby="session-rating-label">
            <% (1..5).each do |rating| %>
              <button type="button" 
                      data-rating-target="star" 
                      data-rating="<%= rating %>"
                      data-action="click->rating#select"
                      class="w-12 h-12 text-gray-400 hover:text-yellow-400 transition-colors focus:outline-none focus:ring-2 focus:ring-omise-teal focus:ring-offset-2 focus:ring-offset-gray-900 rounded-lg"
                      role="radio"
                      aria-checked="false"
                      aria-label="<%= rating %> star<%= 's' if rating != 1 %>">
                <svg class="w-full h-full" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </button>
            <% end %>
          </div>
          <%= form.hidden_field :rating, "data-rating-target": "input", required: true, id: "session_feedback_rating" %>
          <% if @feedback.errors[:rating].any? %>
            <p class="mt-2 text-sm text-red-400"><%= @feedback.errors[:rating].first %></p>
          <% else %>
            <p class="mt-2 text-sm text-gray-400">Please select a rating</p>
          <% end %>
        </div>

        <!-- Comment Section -->
        <div>
          <%= form.label :comment, "Additional Comments (Optional)", class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= form.text_area :comment, 
                rows: 4,
                placeholder: "Share your thoughts about the session content, speaker, or any suggestions...",
                class: "w-full px-3 py-3 border border-gray-600 rounded-lg bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-omise-teal focus:border-transparent" %>
          <% if @feedback.errors[:comment].any? %>
            <p class="mt-2 text-sm text-red-400"><%= @feedback.errors[:comment].first %></p>
          <% end %>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-end space-x-4">
          <%= link_to "Cancel", session_path(@session), 
                class: "px-6 py-3 border border-gray-600 text-gray-300 rounded-lg hover:bg-gray-800 transition-colors" %>
          <%= form.submit "Submit Feedback", 
                class: "px-6 py-3 bg-omise-teal text-white font-medium rounded-lg hover:bg-omise-teal-dark transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
