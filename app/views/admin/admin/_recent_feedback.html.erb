<div>
  <% if recent_feedback.any? %>
    <div class="space-y-4">
      <% recent_feedback.each do |feedback| %>
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between p-3 sm:p-4 bg-gray-800 rounded-lg gap-2 sm:gap-4">
          <div class="flex-1">
            <div class="flex flex-col sm:flex-row sm:items-center space-y-1 sm:space-y-0 sm:space-x-2 mb-1">
              <span class="text-sm font-medium text-white"><%= feedback.user.name %></span>
              <div class="flex">
                <% 5.times do |i| %>
                  <svg class="w-3 h-3 sm:w-4 sm:h-4 <%= i < feedback.rating ? 'text-yellow-400' : 'text-gray-600' %>" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                <% end %>
              </div>
            </div>
            <p class="text-xs sm:text-sm text-gray-400">
              <% if feedback.session %>
                Session: <%= feedback.session.title %>
              <% else %>
                Overall Event Feedback
              <% end %>
            </p>
            <% if feedback.comment.present? %>
              <p class="text-xs sm:text-sm text-gray-300 mt-1 line-clamp-2"><%= feedback.comment %></p>
            <% end %>
          </div>
          <div class="text-xs text-gray-500">
            <%= time_ago_in_words(feedback.created_at) %> ago
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <div class="text-gray-400 mb-2">
        <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <p class="text-gray-400">No feedback yet</p>
    </div>
  <% end %>
</div>
