<div class="min-h-screen bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">Feedback Results</h1>
          <p class="text-gray-400">Detailed feedback analytics and insights</p>
        </div>
        <div class="flex space-x-4">
          <%= link_to "Back to Dashboard", admin_dashboard_path, 
                class: "px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors" %>
        </div>
      </div>
    </div>

    <!-- Overall Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-gray-900 rounded-lg p-6">
        <div class="flex items-center">
          <div class="p-3 bg-omise-teal bg-opacity-20 rounded-lg">
            <svg class="w-6 h-6 text-omise-teal" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Overall Average</p>
            <p class="text-2xl font-bold text-white"><%= @overall_average %></p>
            <p class="text-xs text-gray-500">out of 5 stars</p>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6">
        <div class="flex items-center">
          <div class="p-3 bg-blue-500 bg-opacity-20 rounded-lg">
            <svg class="w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Session Average</p>
            <p class="text-2xl font-bold text-white"><%= @session_average %></p>
            <p class="text-xs text-gray-500">out of 5 stars</p>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-500 bg-opacity-20 rounded-lg">
            <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Overall Feedback</p>
            <p class="text-2xl font-bold text-white"><%= @overall_feedback.count %></p>
            <p class="text-xs text-gray-500">responses</p>
          </div>
        </div>
      </div>

      <div class="bg-gray-900 rounded-lg p-6">
        <div class="flex items-center">
          <div class="p-3 bg-green-500 bg-opacity-20 rounded-lg">
            <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-400">Session Feedback</p>
            <p class="text-2xl font-bold text-white"><%= @session_feedback.count %></p>
            <p class="text-xs text-gray-500">responses</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Rating Distributions -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Overall Event Rating Distribution -->
      <div class="bg-gray-900 rounded-lg p-6">
        <h2 class="text-xl font-bold text-white mb-6">Overall Event Rating Distribution</h2>
        
        <div class="space-y-4">
          <% @overall_rating_distribution.each do |dist| %>
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-1 w-16">
                <span class="text-sm text-gray-400"><%= dist[:rating] %></span>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <div class="bg-gray-800 rounded-full h-2">
                  <div class="bg-omise-teal h-2 rounded-full" style="width: <%= dist[:percentage] %>%"></div>
                </div>
              </div>
              <div class="text-sm text-gray-400 w-20 text-right">
                <%= dist[:count] %> (<%= dist[:percentage] %>%)
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Session Rating Distribution -->
      <div class="bg-gray-900 rounded-lg p-6">
        <h2 class="text-xl font-bold text-white mb-6">Session Rating Distribution</h2>
        
        <div class="space-y-4">
          <% @session_rating_distribution.each do |dist| %>
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-1 w-16">
                <span class="text-sm text-gray-400"><%= dist[:rating] %></span>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <div class="bg-gray-800 rounded-full h-2">
                  <div class="bg-blue-500 h-2 rounded-full" style="width: <%= dist[:percentage] %>%"></div>
                </div>
              </div>
              <div class="text-sm text-gray-400 w-20 text-right">
                <%= dist[:count] %> (<%= dist[:percentage] %>%)
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Top Sessions -->
    <div class="bg-gray-900 rounded-lg p-6 mb-8">
      <h2 class="text-xl font-bold text-white mb-6">Top Rated Sessions</h2>
      
      <% if @top_sessions.any? %>
        <div class="space-y-4">
          <% @top_sessions.each_with_index do |session, index| %>
            <div class="flex items-center justify-between p-4 bg-gray-800 rounded-lg">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-omise-teal bg-opacity-20 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-omise-teal">#<%= index + 1 %></span>
                  </div>
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-white"><%= session.title %></h3>
                  <p class="text-sm text-gray-400">Speaker: <%= User.find(session.speaker_id).name %></p>
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <div class="text-right">
                  <div class="flex items-center space-x-1">
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                    <span class="text-lg font-bold text-white"><%= session.avg_rating.round(1) %></span>
                  </div>
                  <p class="text-sm text-gray-400"><%= session.feedback_count %> feedback<%= 's' if session.feedback_count != 1 %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          <p class="text-gray-400">No session feedback yet</p>
        </div>
      <% end %>
    </div>

    <!-- Recent Feedback Comments -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Overall Event Comments -->
      <div class="bg-gray-900 rounded-lg p-6">
        <h2 class="text-xl font-bold text-white mb-6">Overall Event Comments</h2>
        
        <% overall_comments = @overall_feedback.where.not(comment: [nil, '']).order(created_at: :desc).limit(5) %>
        <% if overall_comments.any? %>
          <div class="space-y-4">
            <% overall_comments.each do |feedback| %>
              <div class="p-4 bg-gray-800 rounded-lg">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-white"><%= feedback.user.name %></span>
                  <div class="flex items-center space-x-1">
                    <% 5.times do |i| %>
                      <svg class="w-4 h-4 <%= i < feedback.rating ? 'text-yellow-400' : 'text-gray-600' %>" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
                <p class="text-sm text-gray-300"><%= feedback.comment %></p>
                <p class="text-xs text-gray-500 mt-2"><%= time_ago_in_words(feedback.created_at) %> ago</p>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-400">No comments yet</p>
          </div>
        <% end %>
      </div>

      <!-- Session Comments -->
      <div class="bg-gray-900 rounded-lg p-6">
        <h2 class="text-xl font-bold text-white mb-6">Session Comments</h2>
        
        <% session_comments = @session_feedback.where.not(comment: [nil, '']).order(created_at: :desc).limit(5) %>
        <% if session_comments.any? %>
          <div class="space-y-4">
            <% session_comments.each do |feedback| %>
              <div class="p-4 bg-gray-800 rounded-lg">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-white"><%= feedback.user.name %></span>
                  <div class="flex items-center space-x-1">
                    <% 5.times do |i| %>
                      <svg class="w-4 h-4 <%= i < feedback.rating ? 'text-yellow-400' : 'text-gray-600' %>" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                    <% end %>
                  </div>
                </div>
                <p class="text-sm text-gray-400 mb-1">Session: <%= feedback.session.title %></p>
                <p class="text-sm text-gray-300"><%= feedback.comment %></p>
                <p class="text-xs text-gray-500 mt-2"><%= time_ago_in_words(feedback.created_at) %> ago</p>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-400">No comments yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
