<div class="min-h-screen bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-white mb-2">Admin Dashboard</h1>
          <p class="text-gray-400 text-sm sm:text-base">Command O Conference Management</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-2 sm:gap-4">
          <%= link_to "Switch to Attendee View", admin_switch_to_attendee_view_path, 
                class: "px-3 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors text-sm text-center" %>
          <%= link_to "Logout", logout_path, 
                data: { "turbo-method": :delete },
                class: "px-3 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors text-sm text-center" %>
        </div>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8">
      <!-- Total Attendees -->
      <div class="bg-gray-900 rounded-lg p-4 sm:p-6">
        <div class="flex items-center">
          <div class="p-2 sm:p-3 bg-omise-teal bg-opacity-20 rounded-lg">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-omise-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div class="ml-3 sm:ml-4">
            <p class="text-xs sm:text-sm font-medium text-gray-400">Total Attendees</p>
            <p class="text-xl sm:text-2xl font-bold text-white"><%= @total_attendees %></p>
          </div>
        </div>
      </div>

      <!-- Checked In -->
      <div class="bg-gray-900 rounded-lg p-4 sm:p-6">
        <div class="flex items-center">
          <div class="p-2 sm:p-3 bg-green-500 bg-opacity-20 rounded-lg">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-3 sm:ml-4">
            <p class="text-xs sm:text-sm font-medium text-gray-400">Checked In</p>
            <p class="text-xl sm:text-2xl font-bold text-white"><%= @checked_in_attendees %></p>
            <p class="text-xs text-gray-500">
              <%= @total_attendees > 0 ? (@checked_in_attendees.to_f / @total_attendees * 100).round(1) : 0 %>%
            </p>
          </div>
        </div>
      </div>

      <!-- Total Sessions -->
      <div class="bg-gray-900 rounded-lg p-4 sm:p-6">
        <div class="flex items-center">
          <div class="p-2 sm:p-3 bg-blue-500 bg-opacity-20 rounded-lg">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-3 sm:ml-4">
            <p class="text-xs sm:text-sm font-medium text-gray-400">Total Sessions</p>
            <p class="text-xl sm:text-2xl font-bold text-white"><%= @total_sessions %></p>
          </div>
        </div>
      </div>

      <!-- Average Rating -->
      <div class="bg-gray-900 rounded-lg p-4 sm:p-6">
        <div class="flex items-center">
          <div class="p-2 sm:p-3 bg-yellow-500 bg-opacity-20 rounded-lg">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <div class="ml-3 sm:ml-4">
            <p class="text-xs sm:text-sm font-medium text-gray-400">Average Rating</p>
            <p class="text-xl sm:text-2xl font-bold text-white"><%= @average_rating %></p>
            <p class="text-xs text-gray-500">out of 5 stars</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
      <!-- Recent Feedback -->
      <div class="bg-gray-900 rounded-lg p-4 sm:p-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 sm:mb-6 gap-2">
          <h2 class="text-lg sm:text-xl font-bold text-white">Recent Feedback</h2>
          <%= link_to "View All", admin_feedback_results_path, 
                class: "text-omise-teal hover:text-omise-teal-dark text-sm font-medium" %>
        </div>
        
        <% if @recent_feedback.any? %>
          <div class="space-y-4">
            <% @recent_feedback.each do |feedback| %>
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between p-3 sm:p-4 bg-gray-800 rounded-lg gap-2 sm:gap-4">
                <div class="flex-1">
                  <div class="flex flex-col sm:flex-row sm:items-center space-y-1 sm:space-y-0 sm:space-x-2 mb-1">
                    <span class="text-sm font-medium text-white"><%= feedback.user.name %></span>
                    <div class="flex">
                      <% 5.times do |i| %>
                        <svg class="w-3 h-3 sm:w-4 sm:h-4 <%= i < feedback.rating ? 'text-yellow-400' : 'text-gray-600' %>" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>
                  <p class="text-xs sm:text-sm text-gray-400">
                    <% if feedback.session %>
                      Session: <%= feedback.session.title %>
                    <% else %>
                      Overall Event Feedback
                    <% end %>
                  </p>
                  <% if feedback.comment.present? %>
                    <p class="text-xs sm:text-sm text-gray-300 mt-1 line-clamp-2"><%= truncate(feedback.comment, length: 80) %></p>
                  <% end %>
                </div>
                <div class="text-xs text-gray-500 sm:ml-4">
                  <%= time_ago_in_words(feedback.created_at) %> ago
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg class="w-12 h-12 text-gray-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <p class="text-gray-400">No feedback yet</p>
          </div>
        <% end %>
        
        <!-- Pagination for Recent Feedback -->
        <% if @recent_feedback.any? && @recent_feedback.total_pages > 1 %>
          <div class="mt-4 flex justify-center">
            <%= paginate @recent_feedback, 
                  theme: 'twitter',
                  params: { controller: 'admin/admin', action: 'dashboard' } %>
          </div>
        <% end %>
      </div>

      <!-- Rating Distribution -->
      <div class="bg-gray-900 rounded-lg p-6">
        <h2 class="text-xl font-bold text-white mb-6">Rating Distribution</h2>
        
        <div class="space-y-4">
          <% @rating_distribution.each do |dist| %>
            <div class="flex items-center space-x-4">
              <div class="flex items-center space-x-1 w-16">
                <span class="text-sm text-gray-400"><%= dist[:rating] %></span>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <div class="bg-gray-800 rounded-full h-2">
                  <div class="bg-omise-teal h-2 rounded-full" style="width: <%= dist[:percentage] %>%"></div>
                </div>
              </div>
              <div class="text-sm text-gray-400 w-20 text-right">
                <%= dist[:count] %> (<%= dist[:percentage] %>%)
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-6 sm:mt-8">
      <h2 class="text-lg sm:text-xl font-bold text-white mb-4 sm:mb-6">Quick Actions</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        <%= link_to admin_attendees_path, class: "bg-gray-900 rounded-lg p-4 sm:p-6 hover:bg-gray-800 transition-colors" do %>
          <div class="flex items-center">
            <div class="p-2 sm:p-3 bg-omise-teal bg-opacity-20 rounded-lg">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-omise-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <div class="ml-3 sm:ml-4">
              <h3 class="text-base sm:text-lg font-semibold text-white">Attendee List</h3>
              <p class="text-xs sm:text-sm text-gray-400">View and export attendee data</p>
            </div>
          </div>
        <% end %>

        <%= link_to admin_feedback_results_path, class: "bg-gray-900 rounded-lg p-4 sm:p-6 hover:bg-gray-800 transition-colors" do %>
          <div class="flex items-center">
            <div class="p-2 sm:p-3 bg-yellow-500 bg-opacity-20 rounded-lg">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            </div>
            <div class="ml-3 sm:ml-4">
              <h3 class="text-base sm:text-lg font-semibold text-white">Feedback Results</h3>
              <p class="text-xs sm:text-sm text-gray-400">View detailed feedback analytics</p>
            </div>
          </div>
        <% end %>

        <%= link_to agenda_path, class: "bg-gray-900 rounded-lg p-4 sm:p-6 hover:bg-gray-800 transition-colors" do %>
          <div class="flex items-center">
            <div class="p-2 sm:p-3 bg-blue-500 bg-opacity-20 rounded-lg">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="ml-3 sm:ml-4">
              <h3 class="text-base sm:text-lg font-semibold text-white">View Agenda</h3>
              <p class="text-xs sm:text-sm text-gray-400">See the conference schedule</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
